generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// id String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid

model CurrencyPair {
  id         String       @id @unique @default(uuid()) // e.g., "XBTCAD"
  ohlcvt1    OHLCVT1[]
  ohlcvt5    OHLCVT5[]
  ohlcvt15   OHLCVT15[]
  ohlcvt30   OHLCVT30[]
  ohlcvt60   OHLCVT60[]
  ohlcvt240  OHLCVT240[]
  ohlcvt720  OHLCVT720[]
  ohlcvt1440 OHLCVT1440[]
}

model OHLCVT1 {
  id               Int      @id @default(autoincrement())
  timestamp        DateTime @unique
  open             Decimal  @db.Decimal(20, 8)
  high             Decimal  @db.Decimal(20, 8)
  low              Decimal  @db.Decimal(20, 8)
  close            Decimal  @db.Decimal(20, 8)
  volume           Decimal  @db.Decimal(20, 8)
  transactionCount Int
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  currencyPairId String
  currencyPair   CurrencyPair @relation(fields: [currencyPairId], references: [id])
}


generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CurrencyPair {
  id     String   @id @default(uuid()) // Use UUID as the primary key
  symbol String   @unique // e.g., "XBTCAD"
  ohlcvt OHLCVT[]
}

// Open High Low Close Volume Transaction Count
model OHLCVT {
  id               Int      @id @default(autoincrement())
  timestamp        DateTime @unique
  open             Decimal  @db.Decimal(20, 8)
  high             Decimal  @db.Decimal(20, 8)
  low              Decimal  @db.Decimal(20, 8)
  close            Decimal  @db.Decimal(20, 8)
  volume           Decimal  @db.Decimal(20, 8)
  transactionCount Int // Number of transactions in the interval
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  currencyPairId String // Change to String to match UUID type
  currencyPair   CurrencyPair @relation(fields: [currencyPairId], references: [id])
}
